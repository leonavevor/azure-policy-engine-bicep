CUSTOM_POLICY_INITIATIVES_CONTENTS=[]
BUILTIN_POLICY_INITIATIVES_CONTENTS=[]


## DEFAULTS FOR DEPLOYMENT OPTIONS (true/false)
#------------------------------------------------
CREATE_MANAGEMENT_GROUPS=false

DEPLOY_CUSTOM_POLICY_DEFINITIONS=true

DEPLOY_CUSTOM_POLICY_INITIATIVES=true
DEPLOY_BUILTIN_POLICY_INITIATIVES=true

ASSIGN_CUSTOM_POLICY_INITIATIVES=true
ASSIGN_BUILTIN_POLICY_INITIATIVES=true

